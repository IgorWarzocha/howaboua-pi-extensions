{
  "name": "@howaboua/pi-todos",
  "version": "0.1.0",
  "description": "Todo manager extension",
  "license": "MIT",
  "keywords": [
    "pi-extension",
    "pi-package"
  ],
  "type": "module",
  "scripts": {
    "build": "bun build ./index.ts --target=node --format=esm --outfile ./dist/index.js --external @mariozechner/pi-ai --external @mariozechner/pi-coding-agent --external @mariozechner/pi-tui",
    "typecheck": "bunx tsc -p ./tsconfig.json",
    "format:check": "oxfmt --check .",
    "format": "oxfmt .",
    "verify": "bun run format && bun run typecheck && bun run format:check && bun run build"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*"
  },
  "devDependencies": {
    "@types/node": "^24.3.0"
  },
  "pi": {
    "extensions": [
      "./index.ts"
    ]
  }
}
