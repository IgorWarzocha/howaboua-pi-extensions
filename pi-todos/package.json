{
  "name": "pi-todos",
  "version": "0.1.0",
  "description": "Todo manager extension",
  "keywords": ["pi-extension"],
  "type": "module",
  "scripts": {
    "build": "bun build ./index.ts --target=node --format=esm --outfile ./dist/index.js --external @mariozechner/pi-ai --external @mariozechner/pi-coding-agent --external @mariozechner/pi-tui",
    "typecheck": "bunx tsc --noEmit --skipLibCheck",
    "format:check": "oxfmt --check .",
    "format": "oxfmt .",
    "verify": "bun run typecheck && bun run format:check && bun run build"
  },
  "peerDependencies": {
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*"
  },
  "pi": {
    "extensions": [
      "./index.ts"
    ]
  }
}
